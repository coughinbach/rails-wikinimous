<%= link_to article_path(@article), class: 'pull-right btn btn-default', method: :delete, data: { confirm: 'Are you sure?' } do %>
  <i class="fa fa-trash-o"></i>
<% end %>

<%= link_to edit_article_path(@article.id), class: 'pull-right btn btn-default' do %>
  <i class="fa fa-pencil"></i>
<% end %>

<h1><%= @article.title %></h1>

<p class="well"><%= @article.content %></p>


<hr>
<%= link_to articles_path do %>
  <i class="fa fa-history"></i> Back to list
<% end %>
